{
  "name": "Eye of Odin",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "Accessibility Helper Extension",
  "homepage_url": "http://vanness.me",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "icons": { "16": "images/eyecon.png",
    "48": "images/eyecon.png",
   "128": "images/eyecon.png" },
  "browser_action": {
    "default_title": "Eye of Odin", 
    "default_popup": "popup/popup.html"    
  },
  "permissions": [
    "activeTab"
  ]
}