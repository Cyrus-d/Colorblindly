{
  "name": "Accessibility Helper",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Accessibility Helper",
  "homepage_url": "http://vanness.me",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "icons": { "16": "images/thicker.png",
    "48": "images/thicker.png",
   "128": "images/thicker.png" },
  "browser_action": {

    "default_title": "Accessibility", 
    "default_popup": "popup/popup.html"    
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",


  "permissions": [
    "activeTab"
  ]
}